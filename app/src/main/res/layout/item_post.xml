<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/cardCornerRadio"
    android:layout_margin="@dimen/layoutMargin"
    app:cardElevation="@dimen/cardElevation"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/imageLayoutWidth"
                android:layout_height="@dimen/imageLayoutHeight"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/layoutMarginImage"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >


                <TextView
                    android:id="@+id/tvItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textSize="@dimen/textSize20"
                    android:gravity="left"
                    android:textColor="@color/primary_light"
                    android:layout_marginTop="@dimen/textMarginTop"
                    />

                <!--<com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bnvMenuPost"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    app:menu="@menu/bnv_menu_post"
                    android:background="@android:color/transparent"
                    app:elevation="0dp"
                    />-->

               <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibLocation"
                        android:layout_width="@dimen/btnWidth"
                        android:layout_height="@dimen/btnHeight"
                        android:background="@color/primary"
                        android:src="@drawable/ic_location_black" />

                    <ImageButton
                        android:id="@+id/ibShare"
                        android:layout_width="@dimen/btnWidth"
                        android:layout_height="@dimen/btnHeight"
                        android:src="@drawable/ic_share_black"
                        android:background="@color/primary"
                        />

                    <ImageButton
                        android:id="@+id/ibMessage"
                        android:layout_width="@dimen/btnWidth"
                        android:layout_height="@dimen/btnHeight"
                        android:src="@drawable/ic_send_black"
                        android:background="@color/primary"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLatitude"
                        android:text="Latitud"
                        android:textColor="@color/primary"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>


                    <TextView
                        android:id="@+id/tvLongitude"
                        android:text="Longitude"
                        android:textColor="@color/primary"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/tvUser"
                        android:text="USER"
                        android:textColor="@color/primary"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--<ImageButton
                android:id="@+id/ibDetail"
                android:layout_width="@dimen/btnWidth"
                android:layout_height="@dimen/btnHeight"
                android:src="@drawable/ic_big_arrow_black"
                android:background="@color/primary"
                android:layout_gravity="center"
                />-->

        </LinearLayout>

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/cero"
            android:background="@color/primary_dark"
            android:layout_marginTop="@dimen/marginTopView" />-->



</androidx.cardview.widget.CardView>